---
interface Props {
  type: "info" | "warning" | "tip";
  title?: string;
}

const { type, title = type.toUpperCase() } = Astro.props;

const styles = {
  info: "border border-blue-500/50 bg-blue-50 dark:bg-blue-900/50",
  warning: "border border-amber-500/50 bg-amber-50 dark:bg-amber-900/50",
  tip: "border border-emerald-500/50 bg-emerald-50 dark:bg-emerald-900/50",
};

const iconColors = {
  info: "text-blue-600 dark:text-blue-400",
  warning: "text-amber-600 dark:text-amber-400",
  tip: "text-emerald-600 dark:text-emerald-400",
};

const icons = {
  info: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>`,
  warning: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>`,
  tip: `<svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>`,
};
---

<div class={`px-4 py-3 ${styles[type]}`}>
  <div class="flex items-center gap-2">
    <div class={`flex-shrink-0 ${iconColors[type]}`} set:html={icons[type]} />
    <span class={`text-xs font-medium uppercase ${iconColors[type]}`}>
      {title}
    </span>
  </div>
  <div
    class="[&>p]:my-2 text-sm text-slate-700 dark:text-slate-300 [&_a]:underline [&_a]:decoration-from-font"
  >
    <slot />
  </div>
</div>
