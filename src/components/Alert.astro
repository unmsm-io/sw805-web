---
interface Props {
  type: "info" | "warning" | "tip";
}

const { type } = Astro.props;

const styles = {
  info: "bg-blue-50/30 border-blue-400 text-blue-700 dark:bg-blue-900/20 dark:text-blue-300",
  warning:
    "bg-amber-50/30 border-amber-400 text-amber-700 dark:bg-amber-900/20 dark:text-amber-300",
  tip: "bg-emerald-50/30 border-emerald-400 text-emerald-700 dark:bg-emerald-900/20 dark:text-emerald-300",
};

const icons = {
  info: `<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>`,
  warning: `<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
  </svg>`,
  tip: `<svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
  </svg>`,
};
---

<div
  class={`p-3 rounded-md border-l border-t-0 border-r-0 border-b-0 flex items-start gap-2 my-4 ${styles[type]}`}
>
  <div class="flex-shrink-0 mt-1" set:html={icons[type]} />
  <div class="flex-1 text-sm leading-relaxed">
    <slot />
  </div>
</div>
