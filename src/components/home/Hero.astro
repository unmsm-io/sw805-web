---
import { COURSE_CONFIG } from "../../config/course";
---

<header
  class="text-black dark:text-white bg-zinc-50 dark:bg-zinc-900 border-b border-zinc-200 dark:border-zinc-800"
>
  <div class="max-w-6xl mx-auto px-4 py-3">
    <div class="flex flex-col gap-2">
      <div class="flex items-baseline gap-2">
        <h1 class="text-2xl font-bold">{COURSE_CONFIG.code}:</h1>
        <h2 class="text-2xl">{COURSE_CONFIG.name}</h2>
      </div>

      <div class="flex flex-wrap gap-x-8 gap-y-1 text-sm">
        <div class="flex items-center gap-1">
          <span class="font-medium">Cr√©ditos:</span>
          <span class="text-zinc-600 dark:text-zinc-300"
            >{COURSE_CONFIG.credits}</span
          >
        </div>
        <div class="flex items-center gap-1">
          <span class="font-medium">Horario:</span>
          <span class="text-zinc-600 dark:text-zinc-300"
            >{COURSE_CONFIG.schedule.lectures}</span
          >
        </div>
        <div class="flex items-center gap-1">
          <span class="font-medium">Lugar:</span>
          <span class="text-zinc-600 dark:text-zinc-300"
            >{COURSE_CONFIG.schedule.location}</span
          >
        </div>
      </div>
    </div>
  </div>
</header>
