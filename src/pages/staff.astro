---
import BaseLayout from '../layouts/BaseLayout.astro';
import { COURSE_CONFIG } from '../config/course';
import { Mail, Clock, ExternalLink, GraduationCap } from 'lucide-astro';

const { instructors } = COURSE_CONFIG;
const [mainInstructor, teachingAssistant] = instructors;
---

<BaseLayout title="Equipo">
  <div class="prose dark:prose-invert max-w-none">
    <h1 class="text-2xl font-semibold mb-6">Equipo Docente</h1>

    <div class="space-y-8">
      <!-- Main Instructor -->
      <section>
        <h2 class="text-lg font-medium mt-0 mb-4">Profesor</h2>
        <div class="bg-white dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded p-4">
          <div class="flex gap-4">
            <img
              src={mainInstructor.image}
              alt={mainInstructor.name}
              class="w-36 h-36 mt-0 mb-0 object-cover rounded"
              loading="lazy"
            />
            <div>
              <h3 class="text-base font-medium mt-0 mb-1">{mainInstructor.name}</h3>
              <a
                href={`mailto:${mainInstructor.email}`}
                class="text-sm text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-1"
              >
                <Mail class="w-3.5 h-3.5" />
                {mainInstructor.email}
                <ExternalLink class="w-3.5 h-3.5" />
              </a>
              <div class="mt-2 flex items-center gap-2 text-sm text-gray-600 dark:text-gray-300">
                <Clock class="w-3.5 h-3.5 text-gray-400" />
                {mainInstructor.officeHours}
              </div>
              <div class="mt-1 text-sm text-gray-600 dark:text-gray-300">
                <GraduationCap class="w-3.5 h-3.5 inline mr-1" />
                {mainInstructor.education}
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Teaching Assistant -->
      <section>
        <h2 class="text-lg font-medium mt-0 mb-4">Jefe de Pr√°ctica</h2>
        <div class="bg-white dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded p-4">
          <div class="flex gap-4">
            <img
              src={teachingAssistant.image}
              alt={teachingAssistant.name}
              class="w-32 h-32 mt-0 mb-0 object-cover rounded"
              loading="lazy"
            />
            <div>
              <h3 class="text-base font-medium mt-0 mb-1">{teachingAssistant.name}</h3>
              <a
                href={`mailto:${teachingAssistant.email}`}
                class="text-sm text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-1"
              >
                <Mail class="w-3.5 h-3.5" />
                {teachingAssistant.email}
                <ExternalLink class="w-3.5 h-3.5" />
              </a>
              <div class="mt-2 flex items-center gap-2 text-sm text-gray-600 dark:text-gray-300">
                <Clock class="w-3.5 h-3.5 text-gray-400" />
                {teachingAssistant.officeHours}
              </div>
              <div class="mt-1 text-sm text-gray-600 dark:text-gray-300">
                <GraduationCap class="w-3.5 h-3.5 inline mr-1" />
                {teachingAssistant.education}
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
