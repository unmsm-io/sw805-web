---
import BaseLayout from '../layouts/BaseLayout.astro';
import { COURSE_CONFIG } from '../config/course';
import { Book, Cloud, ChevronRight, ExternalLink } from 'lucide-astro';

const additionalDocs = [
  {
    title: 'OpenMP Specifications',
    description: 'Documentación oficial y especificaciones de OpenMP',
    url: 'https://www.openmp.org/specifications/',
  },
  {
    title: 'Open MPI Documentation',
    description: 'Guías y documentación de Open MPI',
    url: 'https://www.open-mpi.org/doc/',
  },
  {
    title: 'CUDA Documentation',
    description: 'Documentación completa de NVIDIA CUDA',
    url: 'https://docs.nvidia.com/cuda/',
  },
  {
    title: 'LLNL HPC Tutorials',
    description: 'Tutoriales de computación paralela del Lawrence Livermore National Laboratory',
    url: 'https://computing.llnl.gov/tutorials',
  }
] as const;

---


<BaseLayout title="Recursos">
  <div class="prose dark:prose-invert max-w-none">
    <h1 class="text-2xl font-semibold mb-6">Recursos</h1>

    <div class="space-y-8">
      <!-- Development Setup -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">Configuración del Entorno</h2>
        </div>

        <!-- Required Software -->
        <div class="grid gap-4 md:grid-cols-3">
          {COURSE_CONFIG.resources.developmentSetup.requiredSoftware.map(software => (
            <div class="bg-white dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded p-3">
              <h3 class="text-base font-medium mt-0 mb-2">{software.name}</h3>
              <div class="flex gap-3 text-sm">
                <a 
                  href={software.url}
                  class="text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-1"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  Descargar
                  <ExternalLink class="w-3.5 h-3.5" />
                </a>
                <a 
                  href={software.setupGuide}
                  class="text-blue-600 dark:text-blue-400 hover:underline inline-flex items-center gap-1"
                >
                  Guía
                  <ChevronRight class="w-3.5 h-3.5" />
                </a>
              </div>
            </div>
          ))}
        </div>

        <!-- Extensions -->
        <div class="mt-6">
          <h3 class="text-base font-medium mb-3">Extensiones de VS Code</h3>
          <div class="grid gap-3 md:grid-cols-2">
            {COURSE_CONFIG.resources.developmentSetup.extensions.map(ext => (
              <div class="flex items-center justify-between bg-white dark:bg-gray-800/50  border border-gray-200 dark:border-gray-700 rounded p-3">
                <div>
                  <p class="font-medium text-sm m-0">{ext.name}</p>
                  <p class="text-sm text-gray-500 m-0">{ext.description}</p>
                </div>
                <a
                  href={`vscode:extension/${ext.id}`}
                  class="text-blue-600 dark:text-blue-400 text-sm hover:underline inline-flex items-center gap-1"
                >
                  Instalar
                  <ChevronRight class="w-3.5 h-3.5" />
                </a>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Documentation -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">Documentación</h2>
        </div>

        <div class="grid gap-4 md:grid-cols-2">
          <!-- Main Textbook -->
          <div class="bg-white dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded p-3">
            <div class="flex gap-4">
              <img
                src={COURSE_CONFIG.resources.mainTextbook.coverImage || '/textbook-cover.webp'}
                alt="Portada del libro"
                class="w-24 h-32 mt-0 mb-0 object-cover rounded"
              />
              <div>
                <h3 class="text-base font-medium mt-0 mb-2">
                  {COURSE_CONFIG.resources.mainTextbook.title}
                </h3>
                <div class="text-sm text-gray-600 dark:text-gray-300 space-y-1">
                  <p class="mt-0 mb-0">por {COURSE_CONFIG.resources.mainTextbook.author}</p>
                  <p class="mt-0 mb-0">{COURSE_CONFIG.resources.mainTextbook.edition}</p>
                  <p class="mt-0 mb-0">{COURSE_CONFIG.resources.mainTextbook.publisher}, {COURSE_CONFIG.resources.mainTextbook.year}</p>
                  <p class="mt-0 mb-0">ISBN: {COURSE_CONFIG.resources.mainTextbook.isbn}</p>
                </div>
                <a 
                  href="#" 
                  class="text-blue-600 dark:text-blue-400 text-sm hover:underline inline-flex items-center gap-1 mt-2"
                >
                  Ver detalles
                  <ChevronRight class="w-3.5 h-3.5" />
                </a>
              </div>
            </div>
          </div>

          <!-- Additional Docs -->
          {additionalDocs.map(doc => (
            <a
              href={doc.url}
              class="no-underline hover:underline bg-white dark:bg-gray-800/50 hover:bg-gray-100 dark:hover:bg-gray-700/50 transition-colors block border border-gray-200 dark:border-gray-700 rounded p-3 hover:bg-gray-50 dark:hover:bg-gray-800"
              target="_blank"
              rel="noopener noreferrer"
            >
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-2">
                  <div>
                    <h4 class="text-base font-medium mb-2 mt-0">{doc.title}</h4>
                    <p class="text-sm text-gray-600 dark:text-gray-300 mb-0">
                      {doc.description}
                    </p>
                  </div>
                </div>
                <ExternalLink class="w-3.5 h-3.5 text-gray-400" />
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Cloud Resources -->
      <section>
        <div class="flex items-baseline gap-2 mb-4">
          <h2 class="text-lg font-medium mt-0 mb-0">Recursos en la Nube</h2>
        </div>
        
        <div class="grid gap-3 md:grid-cols-3">
          {COURSE_CONFIG.resources.additionalResources.map(resource => (
            <a
              href={resource.url}
              class="block no-underline hover:underline bg-white dark:bg-gray-800/50 hover:bg-gray-100 dark:hover:bg-gray-700/50 transition-colors border border-gray-200 dark:border-gray-700 rounded p-3 hover:bg-gray-50 dark:hover:bg-gray-800"
              target="_blank"
              rel="noopener noreferrer"
            >
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-base font-medium mt-0 mb-1">{resource.title}</h3>
                  <p class="text-sm text-gray-600 dark:text-gray-300 m-0">
                    {resource.description}
                  </p>
                </div>
                <ExternalLink class="w-3.5 h-3.5 text-gray-400" />
              </div>
            </a>
          ))}
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
